<mvc:View controllerName="one.labs.mem_profiler.controller.FuncArea" displayBlock="true" xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.suite.ui.commons" xmlns:semantic="sap.m.semantic" xmlns:table="sap.ui.table"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls" xmlns="sap.m" xmlns:micro="sap.suite.ui.microchart">
		<Panel width="auto" class="sapUiResponsiveMargin" headerText="{= ${appData>/nestedViewMode} ? ${i18n>pageFuncAreaTitle} : ''}">
		<!--<Title text="{i18n>pageFuncAreaTitle}"/>-->
		<!--<content>-->
			<Table id="funcAreaTable" ariaLabelledBy="title" items="{funcArea>/results}" growing="true" visible="true">
				<columns id="funcAreaTable_columns">
					<Column id="funcAreaTable_col1" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col1_header">
							<Label id="funcAreaTable_col1_label" text="{i18n>funcAreaTableCol1}"/>
						</header>
					</Column>
					<Column id="funcAreaTable_col2" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col2_header">
							<Label id="funcAreaTable_col2_label" text="{i18n>funcAreaTableCol2}"/>
						</header>
					</Column>
					<Column id="funcAreaTable_col_wp" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col_wp_header">
							<Label id="funcAreaTable_col_wp_label" text="{i18n>funcAreaTableColWp}"/>
						</header>
					</Column>
					<Column id="funcAreaTable_col6" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col6_header">
							<Label id="funcAreaTable_col6_label" text="{i18n>funcAraeTableCol3}"/>
						</header>
					</Column>
					<Column id="funcAreaTable_col8" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col8header">
							<Label id="funcAreaTable_col8_label" text="{i18n>funcAreaTableCol4}"/>
						</header>
					</Column>
					<Column id="funcAreaTable_col9" demandPopin="true" minScreenWidth="Tablet">
						<header id="funcAreaTable_col9header">
							<Label id="funcAreaTable_col9_label" text="{i18n>funcAreaTableCol5}"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem id="funcAreaColumnListItem" vAlign="Middle" type="Navigation" press=".onFuncAreaColumnListItemPress">
					<cells id="funcAreaColumnListItem_cells">
						<ObjectIdentifier title="{funcArea>func_area}"/>
						<!--<Text id="funcAreaColumnListItem_cell_1" text="{funcArea>func_area}" maxLines="2"></Text>-->
						<!--<Text id="funcAreaColumnListItem_cell_2" text="{funcArea>func_size_per_tb}" maxLines="2"></Text>-->
						<ObjectNumber unit="GB" emphasized="false" number="{funcArea>func_size_per_tb}"/>
						<VBox renderType="Bare" alignItems="Left" >
							<ObjectNumber 
	                        	number="{path:'funcArea>WarmPotential/0/value', 
	                        			 type: 'sap.ui.model.type.Float', 
	                        			 formatOptions: { maxFractionDigits: 2, groupingSeparator:',', decimalSeparator:'.', showMeasure: false}
	                        			}"
	                        	unit="{i18n>memorySizeGB}"
	                        	emphasized="false"
	                        />
						</VBox>	
						
						<VBox height="100px" renderType="Bare" justifyContent="Center">
							<micro:ColumnMicroChart size="Responsive" columns="{funcArea>years}" allowColumnLabels="true"
							visible="{path:'funcArea>years', formatter:'.formatter.agingDataVisible'}">
								<!--<micro:leftTopLabel>-->
								<!--	<micro:ColumnMicroChartLabel label="{funcArea>years/0/title}"/>-->
								<!--</micro:leftTopLabel>-->
								<!--<micro:rightTopLabel>-->
								<!--	<micro:ColumnMicroChartLabel label="{funcArea>years/3/title}"/>-->
								<!--</micro:rightTopLabel>-->
								<!--<micro:leftBottomLabel>-->
								<!--</micro:leftBottomLabel>-->
								<!--<micro:rightBottomLabel>-->
								<!--	<micro:ColumnMicroChartLabel label="{i18n>funcAreaColumnMicrochartLabel}"/>-->
								<!--</micro:rightBottomLabel>-->
								<micro:columns>
									<micro:ColumnMicroChartData label="{funcArea>title}" 
									value="{path: 'funcArea>value', formatter: '.formatter.numberValue'}" 
									displayValue="{path: 'funcArea>value', formatter: '.formatter.percentage'}"
									color="Neutral"/>
								</micro:columns>
							</micro:ColumnMicroChart>
							<Text textAlign="Center" text="{i18n>commonColumnMicrochartNoData}" 
							visible="{path:'funcArea>years', formatter:'.formatter.noAgingDataVisible'}"/>
						</VBox>
							<micro:ComparisonMicroChart scale="%" press="press" isResponsive="true" data="{funcArea>data}" maxValue="100">
								<micro:data>
									<micro:ComparisonMicroChartData title="{funcArea>title}" value="{funcArea>value}" color="{path:'funcArea>color', formatter: '.formatter.fourSeriesColour'}"/>
								</micro:data>
							</micro:ComparisonMicroChart>
							<micro:ComparisonMicroChart scale="GB" press="press" isResponsive="true" data="{funcArea>RSCS}">
								<micro:data>
									<micro:ComparisonMicroChartData title="{funcArea>title}" value="{funcArea>value}" color="{path:'funcArea>color', formatter: '.formatter.fourSeriesColour'}"/>
								</micro:data>
							</micro:ComparisonMicroChart>
					</cells>
				</ColumnListItem>
			</Table>
		<!--</content>-->
		</Panel>
</mvc:View>