<mvc:View controllerName="one.labs.mem_profiler.controller.Platform" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.suite.ui.commons" xmlns:semantic="sap.m.semantic" xmlns:table="sap.ui.table"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls" xmlns:micro="sap.suite.ui.microchart">
		<Panel width="auto" class="sapUiResponsiveMargin" headerText="{= ${appData>/nestedViewMode} ? ${i18n>pagePlatformTitle} : ''}">
		<!--<Title text="{i18n>pagePlatformTitle}"/>-->
		<!--<content>-->
			<Table id="platformTable" items="{platform>/results}" visible="true">
				<columns id="datasetTable_columns">
					<Column id="datasetTable_col8" demandPopin="true" minScreenWidth="Tablet">
						<header id="datasetTable_col8_header">
							<Label id="datasetTable_col8_label" text="{i18n>platformTableCol1}"/>
						</header>
					</Column>
					<Column id="datasetTable_col_wp" demandPopin="true" minScreenWidth="Tablet">
						<header id="datasetTable_col_wp_header">
							<Label id="datasetTable_col_wp_label" text="{i18n>platformTableColWp}"/>
						</header>
					</Column>
					<Column id="datasetTable_col4" demandPopin="true" minScreenWidth="Tablet">
						<header id="datasetTable_col4_header">
							<Label id="datasetTable_col4_label" text="{i18n>platformTableCol2}"/>
						</header>
					</Column>
					<Column id="datasetTable_col7" demandPopin="true" minScreenWidth="Tablet">
						<header id="datasetTable_col7_header">
							<Label id="datasetTable_col7_label" text="{i18n>platformTableCol3}"/>
						</header>
					</Column>
					<Column id="datasetTable_col6" demandPopin="true" minScreenWidth="Tablet">
						<header id="datasetTable_col6_header">
							<Label id="datasetTable_col6_label" text="{i18n>platformTableCol4}"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem id="datasetColumnListItem" vAlign="Middle" type="Navigation" press=".onColumnListItemPress">
					<cells id="datasetColumnListItem_cells">
							<micro:ComparisonMicroChart scale="GB" press="press" isResponsive="true" data="{platform>business}">
								<micro:data>
									<micro:ComparisonMicroChartData title="{platform>title}" value="{platform>value}" 
									color="{path:'platform>color', formatter: '.formatter.fourSeriesColour'}"/>
								</micro:data>
							</micro:ComparisonMicroChart>
							
						<VBox renderType="Bare" alignItems="Center" >
							<ObjectNumber 
	                        	number="{path:'platform>WarmPotential/0/value', 
	                        			 type: 'sap.ui.model.type.Float', 
	                        			 formatOptions: { maxFractionDigits: 2, groupingSeparator:',', decimalSeparator:'.', showMeasure: false}
	                        			}"
	                        	unit="{i18n>memorySizeGB}"
	                        	emphasized="false"
	                        />
						</VBox>	
						<VBox height="100px" renderType="Bare" >
							<micro:ColumnMicroChart isResponsive="true" columns="{platform>years}"  allowColumnLabels="true"
							visible="{path:'platform>years', formatter: '.formatter.agingDataVisible'}" >
								<!--<micro:rightBottomLabel>-->
								<!--	<micro:ColumnMicroChartLabel label="{i18n>platformColumnMicrochartLabel}"/>-->
								<!--</micro:rightBottomLabel>-->
								<micro:columns>
									<micro:ColumnMicroChartData label="{platform>title}" 
									value="{platform>value}" 
									displayValue="{path: 'platform>value', formatter: '.formatter.percentage'}"
									color="Neutral"/>
								</micro:columns>
							</micro:ColumnMicroChart>
						</VBox>
							<micro:ComparisonMicroChart scale="%" press="press" isResponsive="true" data="{platform>data}" maxValue="100">
								<micro:data>
									<micro:ComparisonMicroChartData title="{platform>title}" value="{platform>value}" 
									color="{path:'platform>color', formatter: '.formatter.fourSeriesColour'}"/>
								</micro:data>
							</micro:ComparisonMicroChart>
							<micro:ComparisonMicroChart scale="GB" press="press" isResponsive="true" data="{platform>RSCS}">
								<micro:data>
									<micro:ComparisonMicroChartData title="{platform>title}" value="{platform>value}" 
									color="{path: 'platform>color', formatter: '.formatter.fourSeriesColour'}"/>
								</micro:data>
							</micro:ComparisonMicroChart>
					</cells>
				</ColumnListItem>
			</Table>
		<!--</content>-->
		</Panel>
</mvc:View>