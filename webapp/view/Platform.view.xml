<mvc:View
	controllerName="one.labs.mem_profiler.controller.Platform"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.suite.ui.commons"
	xmlns:semantic="sap.m.semantic"
	xmlns:table="sap.ui.table"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:viz="sap.viz.ui5.controls"
	
	xmlns:micro="sap.suite.ui.microchart">

	
			
			<Panel width="auto" class="sapUiResponsiveMargin">
				<Title text="In-Memory Data Profile (Summary)"/>
			
		
		<content>
				<Table id="platformTable"
					items="{/results}" 
                   
                   visible="true">
                   
                

				<columns id="datasetTable_columns">
				
					<Column id="datasetTable_col8" >
						<header id="datasetTable_col8_header">
							<Label id="datasetTable_col8_label" text="Largest Business Areas"/>
						</header>
					</Column>
					
					<Column id="datasetTable_col4" >
						<header id="datasetTable_col4_header">
							<Label id="datasetTable_col4_label" text="Data Aging"/>
						</header>
					</Column>

					<Column id="datasetTable_col7" >
						<header id="datasetTable_col7_header">
							<Label id="datasetTable_col7_label" text="Purpose of Data"/>
						</header>
					</Column>
					
					<Column id="datasetTable_col6" >
						<header id="datasetTable_col6_header">
							<Label id="datasetTable_col6_label" text="Row/Column Store"/>
						</header>
					</Column>
					
					
					
					
				</columns>
				<ColumnListItem id="datasetColumnListItem" vAlign="Middle"  selectionMode="Multi" >
					<cells id="datasetColumnListItem_cells">
						
						
						
						
						<FlexBox height="150px" width="170px">
						<micro:ComparisonMicroChart scale="GB" press="press" isResponsive="true" 
							   data="{business}"
							   templateShareable = "true">
								<micro:data>
									<micro:ComparisonMicroChartData title="{title}" value="{value}" color="{color}" />
								</micro:data>
							</micro:ComparisonMicroChart>
						</FlexBox>
						
						
						<FlexBox height="100px" width="170px">
						<micro:ColumnMicroChart  isResponsive="true" 
							   columns="{years}"
							   templateShareable = "true">
							   <micro:rightBottomLabel>
							<micro:ColumnMicroChartLabel label="% Volume per Year" />
						</micro:rightBottomLabel>
						
								<micro:columns>
									<micro:ColumnMicroChartData label="{title}"  value="{value}" color="{color}" />
								</micro:columns>
							</micro:ColumnMicroChart>
						</FlexBox>
						

						<FlexBox height="100px" width="170px">
						<micro:ComparisonMicroChart scale="%" press="press" isResponsive="true" 
							   data="{data}"  maxValue="100" class="sapUiSmallMargin" width="30rem" 
							   templateShareable = "true">
								<micro:data>
									<micro:ComparisonMicroChartData title="{title}" value="{value}" color="{color}" />
								</micro:data>
							</micro:ComparisonMicroChart>
						</FlexBox>
						
						
						
						
						<FlexBox height="100px" width="170px">
						<micro:ComparisonMicroChart scale="GB" press="press" isResponsive="true" 
							   data="{RSCS}"
							   templateShareable = "true">
								<micro:data>
									<micro:ComparisonMicroChartData title="{title}" value="{value}" color="{color}" />
								</micro:data>
							</micro:ComparisonMicroChart>
						</FlexBox>
						
						
					</cells>
				</ColumnListItem>
			</Table>
			</content>
		
		
			</Panel>
			
		</mvc:View>